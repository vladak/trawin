#!/bin/bash
set -e

env

choco install jdk8 -params 'installdir=c:\\jdk' -y
export JAVA_HOME=${JAVA_HOME:-/c/jdk}
export PATH=${JAVA_HOME}/bin:${PATH}

choco install maven
# TODO: This should reference %M2_HOME% instead of hard-coding Maven version
export MAVEN_HOME=/c/ProgramData/chocolatey/lib/maven/apache-maven-3.6.1
export PATH=${MAVEN_HOME}/bin:${PATH}

choco install universal-ctags
export PATH=${PATH}:/c/ProgramData/chocolatey/lib/universal-ctags/tools

echo ${PATH}
ls ${MAVEN_HOME}

java -version
mvn -version
ctags --version
