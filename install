#!/bin/bash
set -e

choco install jdk8 -params 'installdir=c:\\jdk' -y
export JAVA_HOME=${JAVA_HOME:-/c/jdk}
export PATH=${JAVA_HOME}/bin:${PATH}

choco install maven
# export PATH=${PATH}:/c/mvn
export PATH=/c/ProgramData/chocolatey/lib/maven/bin:${PATH}

choco install universal-ctags

echo ${PATH}
java -version
mvn -version
